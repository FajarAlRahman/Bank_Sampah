<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".RiwayatActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                android:elevation="5dp"
                android:id="@+id/backMain"
                android:contentDescription="@string/navigate_to_the_previous_screen"
                android:background="@drawable/baseline_arrow_circle_left_24"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                android:text="Riwayat"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/riwayatList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/riwayat_item"/>
</LinearLayout>